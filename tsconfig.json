{
    "compilerOptions": {
        "emitDeclarationOnly": true,
        "declaration": true,
        "target": "esnext",
        "lib": [
            "esnext",
            "dom"
        ],
        "strict": false,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "module": "esnext",
        "skipLibCheck": true,
        "types": [
            "node"
        ],
        "rootDir": "src",
        "inlineSourceMap": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "traceResolution": false,
        "listEmittedFiles": false,
        "listFiles": false,
        "pretty": true,
        "typeRoots": [
            "node_modules/@types",
            "src/types"
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules/**"
    ],
    "compileOnSave": false
}