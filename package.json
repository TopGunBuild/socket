{
    "name": "topgun-socket",
    "version": "0.0.2",
    "description": "Scalable realtime pub/sub and RPC serverless framework",
    "browser": "dist/socket-client.js",
    "exports": {
        "./client": "./dist/socket-client.js",
        "./server": "./dist/socket-server.js"
    },
    "typesVersions": {
        "*": {
            "./client": [
                "./dist/socket-client/index.d.ts"
            ],
            "./server": [
                "./dist/socket-server/index.d.ts"
            ]
        }
    },
    "scripts": {
        "buildall": "npm run clean && npm run ts-types && npm run build:socket-client && npm run build:socket-server",
        "build:socket-client": "node build-scripts/client.esbuild.js",
        "build:socket-server": "node build-scripts/server.esbuild.js",
        "clean": "rimraf dist",
        "ts-types": "tsc -p tsconfig.json",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "keywords": [
        "websocket",
        "realtime",
        "client",
        "server",
        "serverless",
        "topgun"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/topgunjs/topgun-socket.git"
    },
    "author": "",
    "readmeFilename": "README.md",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/topgunjs/topgun-socket/issues"
    },
    "homepage": "https://github.com/topgunjs/topgun-socket#readme",
    "dependencies": {
        "buffer": "^5.2.1",
        "isomorphic-webcrypto": "^2.3.8",
        "ws": "^8.9.0"
    },
    "devDependencies": {
        "esbuild": "^0.15.14",
        "esbuild-node-externals": "^1.5.0",
        "rimraf": "^3.0.2",
        "tslint": "^6.1.3",
        "typescript": "^4.8.4"
    }
}
